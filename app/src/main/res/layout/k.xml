<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_gravity="bottom">
    <TextView
        android:id="@+id/textView"
        android:text=""
        android:gravity="center"
        android:layout_height="24sp"
        android:layout_width="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/la"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="la"
            android:src="@drawable/la"
            app:layout_constraintEnd_toStartOf="@+id/hor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageButton
            android:id="@+id/hor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="horizontal line"
            android:src="@drawable/hor"
            app:layout_constraintEnd_toStartOf="@+id/dot"
            app:layout_constraintStart_toEndOf="@id/la"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageButton
            android:id="@+id/dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="dot"
            android:src="@drawable/dot"
            app:layout_constraintEnd_toStartOf="@+id/down"
            app:layout_constraintStart_toEndOf="@id/hor"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageButton
            android:id="@+id/down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="down/left arrow"
            android:src="@drawable/down"
            app:layout_constraintEnd_toStartOf="@+id/ike"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageButton
            android:id="@+id/ike"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="ike"
            android:src="@drawable/ike"
            app:layout_constraintEnd_toStartOf="@+id/bracket_open"
            app:layout_constraintStart_toEndOf="@id/down"
            app:layout_constraintHorizontal_chainStyle="spread"/>

        <ImageButton
            android:id="@+id/bracket_open"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="opening bracket"
            android:src="@drawable/bracket_open"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ike"
            app:layout_constraintHorizontal_chainStyle="spread"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/luka"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="luka"
            android:src="@drawable/luka" />

        <ImageButton
            android:id="@+id/vert"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="vertical line"
            android:src="@drawable/vert" />

        <ImageButton
            android:id="@+id/circle"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="circle"
            android:src="@drawable/circle" />

        <ImageButton
            android:id="@+id/up"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="up/right arrow"
            android:src="@drawable/up" />

        <ImageButton
            android:id="@+id/pona"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="pona"
            android:src="@drawable/pona" />

        <ImageButton
            android:id="@+id/bracket_pini"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="closing bracket"
            android:src="@drawable/bracket_pini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/colon"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="colon"
            android:src="@drawable/colon" />

        <ImageButton
            android:id="@+id/poki"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="poki"
            android:src="@drawable/poki" />

        <ImageButton
            android:id="@+id/box"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="box/suno emitters"
            android:src="@drawable/box" />

        <ImageButton
            android:id="@+id/emitters"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="emitters"
            android:src="@drawable/emitters" />

        <ImageButton
            android:id="@+id/comma"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="comma"
            android:src="@drawable/comma" />

        <ImageButton
            android:id="@+id/backspace"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:contentDescription="backspace"
            android:src="@drawable/backspace" />
    </LinearLayout>
</LinearLayout>