<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/keyboard_color">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textview_height"
        android:gravity="center"
        android:textSize="@dimen/text_height"
        app:fontFamily="@font/compose_glyph_font"
        android:fontFamily="@font/compose_glyph_font"
        tools:ignore="SpUsage"
        android:textColor="@color/text_color" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">
        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/la"
            android:contentDescription="@string/la"
            android:src="@drawable/la" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/hor"
            android:contentDescription="@string/hor"
            android:src="@drawable/hor"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/dot"
            android:contentDescription="@string/dot"
            android:src="@drawable/dot"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/down"
            android:contentDescription="@string/down"
            android:src="@drawable/down"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/ike"
            android:contentDescription="@string/ike"
            android:src="@drawable/ike"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/bracket_open"
            android:contentDescription="@string/bracket_open"
            android:src="@drawable/bracket_open"
            android:backgroundTint="@color/button_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">
        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/luka"
            android:contentDescription="@string/luka"
            android:src="@drawable/luka"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/vert"
            android:contentDescription="@string/vert"
            android:src="@drawable/vert"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/circle"
            android:contentDescription="@string/circle"
            android:src="@drawable/circle"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/up"
            android:contentDescription="@string/up"
            android:src="@drawable/up"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/pona"
            android:contentDescription="@string/pona"
            android:src="@drawable/pona"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/bracket_pini"
            android:contentDescription="@string/bracket_pini"
            android:src="@drawable/bracket_pini"
            android:backgroundTint="@color/button_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">
        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/colon"
            android:contentDescription="@string/colon"
            android:src="@drawable/colon"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/poki"
            android:contentDescription="@string/poki"
            android:src="@drawable/poki"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/box"
            android:contentDescription="@string/box"
            android:src="@drawable/box"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/emitters"
            android:contentDescription="@string/emitters"
            android:src="@drawable/emitters"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/comma"
            android:contentDescription="@string/comma"
            android:src="@drawable/comma"
            android:backgroundTint="@color/button_color" />

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/backspace"
            android:contentDescription="@string/backspace"
            android:src="@drawable/backspace"
            android:backgroundTint="@color/button_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height">

        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/space"
            android:layout_weight="5"
            android:contentDescription="@string/space"
            tools:ignore="ImageContrastCheck"
            android:backgroundTint="@color/button_color" />
        <ImageButton
            style="@style/WakalitoKey"
            android:id="@+id/ret"
            android:contentDescription="@string/ret"
            android:src="@drawable/ret"
            android:backgroundTint="@color/button_color" />
    </LinearLayout>
</LinearLayout>